

<%- include('./base/header.ejs')%>

<style>
  body{
    background-color:black;
  }

  .alert{
    background-color: blueviolet;
  }

  .form-label{
    color: rgb(247, 33, 44);
  }

  /* .btn{
    background-color: blueviolet;
  } */

  form .border{
    border-color: blueviolet;
  }
</style>

<div class="container">
  <div class="alert mt-3 w-50 mx-auto">
    <h4 class="text-center" style="font-weight: bold;color: white;">Add New Student Details</h4>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <form action="" method="POST" class="border border-2 p-4">
        <div class="field my-3">
          <label for="" class="form-label fw-bold">Roll No</label>
          <input type="number" class="form-control" name="rollno" placeholder="enter roll no" required>
        </div>

        <div class="field my-3">
          <label for="" class="form-label fw-bold">Name</label>
          <input type="text" class="form-control" name="name" placeholder="enter student name" required>
        </div>

        <div class="field my-3">
          <label for="" class="form-label fw-bold">E-mail</label>
          <input type="email" class="form-control" name="email" placeholder="enter email id" required>
        </div>

        <div class="field my-3">
          <label for="" class="form-label fw-bold">Phone</label>
          <input type="text" class="form-control" name="phone" placeholder="enter phone no" required>
        </div>

        <input type="submit" value="Create" class="btn btn-success w-100 fw-bold">
      </form>
    </div>
    <div class="col"></div>
  </div>
</div>

